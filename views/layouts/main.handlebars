    <!-- inputmask.js -->
    <script src="/js/jquery.inputmask.bundle.js" charset="utf-8"></script>
      
    <!-- Some common functions to the site -->
    <script src="/js/bip4cast.js" charset="utf-8"></script>
      
    <script src="/js/ie10-viewport-bug-workaround.js"></script>
    {{{_sections.jquery}}} 
  </body>  
</html>