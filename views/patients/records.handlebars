{{#section 'jquery'}}
<script src="/js/inputmask.js"></script>
<script>
    $(document).ready(function() {
      $(":input").inputmask();
    });
  </script>
{{/section}}
<div id="addnewrecord" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Añadir nuevo test</h4>
            </div>
            <form method="post" action="/tracing/process?form=newrecord&id={{pat_id}}">
                <div class="modal-body">
                    Nuevos test para hoy: {{today}}<br>
                    <a href="/patient-info/{{pat_id}}/records/newtest/eeag" class="btn btn-primary">EEAG</a>
                    <a href="/patient-info/{{pat_id}}/records/newtest/hrds" class="btn btn-primary">HDRS</a>
                    <a href="/patient-info/{{pat_id}}/records/newtest/ymrs" class="btn btn-primary">YMRS</a>
                    <a href="/patient-info/{{pat_id}}/records/newtest/panss" class="btn btn-primary">PANSS</a>
                </div>
            </form>
        </div>
    </div>
</div>

<form action="/tracing/process?form=updaterecords&id={{pat_id}}" method="post"> 
    <fieldset class="form-group">
        <label for="begindate">Fecha</label>
        <input type="date" class="form-control" id="begindate" name="begindate" pattern="((0)[1-9]|[12][0-9]|3[01])[- /.]((0)[1-9]|1[012])[- /.](19|20)\d\d" title="El formato aceptado es DD/MM/AAAA" data-inputmask="'mask': '99/99/9999'">
    </fieldset>
    <input type="submit" class="btn btn-primary" value="Obtener informes">
</form>

<a href="/patient-info/{{pat_id}}/records/newtest" class="btn btn-primary"> <span class="glyphicon glyphicon-plus"></span> Añadir test </a>

<h2>Resultados de {{record.date}}</h2>
<div class="btn-group btn-group-justified" role="group">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" href="#eeag" data-toggle="tab" role="tab" aria-expanded="true">EEAG <span class="label label-default">{{record.eeag}}</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" aria-expanded="false" href="#hdrs" role="tab" data-toggle="tab">HDRS <span class="label label-default">{{record.hdrs_total}}</span></a></li>
        <li class="nav-item">
            <a class="nav-link" href="#ymrs" role="tab" data-toggle="tab">YMRS <span class="label label-default">{{record.ymrs_total}}</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#panss" role="tab" data-toggle="tab">PANSS </span></a>
        </li>
    </ul>
</div>
<div class="tab-content">
    <div id="eeag" class="tab-pane" role="tabpanel" aria-expanded="false">
        
    </div>
    <div id="hdrs" class="tab-pane" role="tabpanel" aria-expanded="true">
        <p>Humor depresivo:  {{record.hdrs.deprMood}}</p>
        <p>Sentimientos de culpa: {{record.hdrs.feelGuilty}}</p>
        <p>Suicidio: {{record.hdrs.suic}}</p>
        <p>Insomnio precoz: {{record.hdrs.insoEarly}}</p>
        <p>Insomnio intermedio: {{record.hdrs.insoMiddle}}</p>
        <p>Insomnio tardío: {{record.hdrs.insoLate}}</p>
        <p>Trabajo y actividades: {{record.hdrs.workActiv}}</p>
        <p>Inhibición psicomotora: {{record.hdrs.retard}}</p>
        <p>Agitación psicomotora: {{record.hdrs.agitat}}</p>
        <p>Ansiedad psíquica: {{record.hdrs.anxiPsych}}</p>
        <p>Ansiedad somática: {{record.hdrs.anxiSomat}}</p>
        <p>Síntomas somáticos gastrointestinales: {{record.hdrs.somsymptGastr}}</p>
        <p>Síntomas somáticos generales: {{record.hdrs.somsymptGener}}</p>
        <p>Síntomas genitales: {{record.hdrs.geniSympt}}</p>
        <p>Hipocondría: {{record.hdrs.hypochon}}</p>
        <p>Pérdida de peso: {{record.hdrs.lossWeight}}</p>
        <p>Conciencia de: {{record.hdrs.insight}}</p>
    </div>
    <div id="ymrs" class="tab-pane" role="tabpanel" aria-expanded="true">
        <p>Euforia: {{record.ymrs.elevMood}}</p>
        <p>Hiperactividad: {{record.ymrs.incr_actAner}}</p>
        <p>Impulso sexual: {{record.ymrs.sexuInters}}</p>
        <p>Sueño: {{record.ymrs.sleep}}</p>
        <p>Irritabilidad: {{record.ymrs.irritab}}</p>
        <p>Expresión verbal: {{record.ymrs.speech}}</p>
        <p>Trastornos del curso del pensamiento y el lenguaje: {{record.ymrs.lanThoughDis}} </p>
        <p>Trastornos del contenido del pensamiento: {{record.ymrs.content}}</p>
        <p>Agresividad: {{record.ymrs.disAggrBehav}}</p>
        <p>Apariencia: {{record.ymrs.appearan}}</p>
        <p>Conciencia de enfermedad: {{record.ymrs.insight}}</p>
    </div>
    <div id="panss" class="tab-pane panel-group" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div id="panss_gen" class="panel-heading" role="tab">
                <h3 class="panel-title"> 
                    <a data-toggle="collapse" data-target="#panss_gen_info"  href="#panss_gen_info">PANSS General <span class="label label-primary">{{record.panss_gen_total}}</span><span class="caret"></a>
                </h3>
            </div>
            <div id="panss_gen_info" class="panel-collapse collapse in" style="">
                <div class="panel-body">
                    <p>Preocupaciones somáticas: {{record.panss_gen.somaConcer}}</p>
                    <p>Ansiedad: {{record.panss_gen.anxiet}}</p>
                    <p>Sentimientos de culpa: {{record.panss_gen.guiltFeels}}</p>
                    <p>Tensión motora: {{record.panss_gen.tension}}</p>
                    <p>Manierismos y posturas: {{record.panss_gen.mannPost}}</p>
                    <p>Depresión: {{record.panss_gen.depress}}</p>
                    <p>Retardo motor: {{record.panss_gen.motoRetar}}</p>
                    <p>Falta de colaboración: {{record.panss_gen.uncoop}}</p>
                    <p>Inusuales contenidos del pensamiento: {{record.panss_gen.unuThough}}</p>
                    <p>Desorientación: {{record.panss_gen.disorient}}</p>
                    <p>Atención deficiente: {{record.panss_gen.poorAtten}}</p>
                    <p>Ausencia de juicio e introspección: {{record.panss_gen.ljudInsight}}</p>
                    <p>Trastornos de la volición: {{record.panss_gen.distVolit}}</p>
                    <p>Control deficiente de impulsos: {{record.panss_gen.pinpContr}}</p>
                    <p>Preocupación: {{record.panss_gen.preoc}} </p>
                    <p>Evitación social activa: {{record.panss_gen.asocAvoid}}</p>
                </div>
            </div>
            <div id="panss_pos" class="panel-heading" role="tab">
                <h3 class="panel-title">
                    <a data-toggle="collapse" data-target="#panss_pos_info" href="#panss_pos_info">PANSS Positiva <span class="label label-primary">{{record.panss_pos_total}}</span><span class="caret"></a>
                </h3>
            </div>
            <div id="panss_pos_info" class="panel-collapse collapse">
                <div class="panel-body">
                    <p>Delirios: {{record.panss_pos.delsus}}</p>
                    <p>Desorganización conceptual: {{record.panss_pos.concepDisor}}</p>
                    <p>Conducta alucinatoria: {{record.panss_pos.halluBehav}}</p>
                    <p>Excitación: {{record.panss_pos.excitem}}</p>
                    <p>Grandiosidad: {{record.panss_pos.grandios}}</p>
                    <p>Suspicacia/perjuicio: {{record.panss_pos.suspc}}</p>
                    <p>Hostilidad: {{record.panss_pos.hostil}}</p>
                </div>
            </div>
            <div id="panss_neg" class="panel-heading" role="tab">
                <h3 class="panel-title">
                    <a data-toggle="collapse" data-target="#panss_neg_info" href="#panss_neg_info">PANSS Negativa <span class="label label-primary"> {{record.panss_neg_total}}</span><span class="caret"></a>
                </h3>
            </div>
            <div id="panss_neg_info" class="panel-collapse collapse">
                <div class="panel-body">
                    <p>Embotamiento afectivo: {{record.panss_neg.blunAffec}}</p>
                    <p>Retracción emocional: {{record.panss_neg.emotWithd}}</p>
                    <p>Pobre relación: {{record.panss_neg.pootRapor}}</p>
                    <p>Retracción social, apatía pasiva: {{record.panss_neg.passSocWithd}}</p>
                    <p>Dificultad de pensamiento abstracto: {{record.panss_neg.diffAbstThin}}</p>
                    <p>Falta de espontaneidad y fluidez de la conversación: {{record.panss_neg.lspontConvflow}}</p>
                    <p>Pensamiento estereotipado: {{record.panss_neg.steoThink}}</p>
                </div>
            </div>
        </div>
    </div> 
</div>

